<form class="button" method="GET" action="/merchants/new">
  <input type="submit" value="Create new merchant">
</form>

<br>

<% @merchants.each do |merchant| %>
<p> <%= merchant.name %>
<form class="button" method="GET" action="/merchants/<%= merchant.id %>/edit ">
  <input type="submit" value="edit">
</form>

<form class="button" method="POST" action="/merchants/<%= merchant.id %>/delete ">
  <input type="submit" value="delete">
</form>
<% end %>