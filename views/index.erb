<h1> Money Tracker! </h1>

<form method="GET" action="/transactions/new">
 <div>
      <input type="submit" value="Create new transaction" />
</div>
</form>

<hr>


<% @transactions.each do |transaction| %>
<p> Date: <%= transaction.date %> </p>
<p> Â£<%= transaction.amount %> </p>
<p> Merchant: <%= transaction.find_merchant.name %> </p>
