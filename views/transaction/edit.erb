<h1> Edit this transaction! </h1>

<form method="POST" action="/transactions/<%= @transaction.id %> ">
  <div class="form-wrapper">
    <div class="form-el">
      <label for="name"> Transaction date: </label>
      <input type="date" name="date" id="date" value="<%= @transaction.date %>" />
    </div>

    <div class="form-el">
      <label for="name"> Transaction amount: </label>
      <input type="number" name="amount" step="0.01" id="amount"value="<%= @transaction.amount %>" />
    </div>

     <div class="form-el">
      <label for="merchant"> Merchant: </label>
      <select name="merchant_id" id="merchant" >
        <% @merchants.each do |merchant| %>
        <option value=<%= merchant.id %>
        	<%= "selected" if @transaction.merchant_id == merchant.id %>>
        	<%= merchant.name.capitalize %></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="merchant"> Category: </label>
      <select name="category_id" id="category" >
        <% @categories.each do |category| %>
        <option value=<%= category.id %>
        	<%= "selected" if @transaction.category_id == category.id %>>
        	<%= category.name.capitalize %></option>
        <% end %>
      </select>
    </div>
  
    <div>
      <input type="submit" value="Edit transaction" />
    </div>

  </div>
</form>